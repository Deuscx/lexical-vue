{
  "name": "lexical-vue",
  "type": "module",
  "version": "0.3.4",
  "description": "An extensible Vue 3 web text-editor based on Lexical.",
  "author": "Robert Soriano <sorianorobertc@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/wobsoriano/lexical-vue#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/lexical-vue.git"
  },
  "bugs": {
    "url": "https://github.com/wobsoriano/lexical-vue/issues"
  },
  "keywords": [
    "vue",
    "lexical",
    "editor",
    "rich-text"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "*",
        "dist/*",
        "dist/*.d.ts",
        "dist/*/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vue-tsc --declaration --emitDeclarationOnly && unbuild",
    "dev": "pnpm build && pnpm --filter playground dev",
    "release": "bumpp && npm publish",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "peerDependencies": {
    "lexical": "^0.7.5",
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@lexical/clipboard": "^0.7.5",
    "@lexical/code": "^0.7.5",
    "@lexical/dragon": "^0.7.5",
    "@lexical/hashtag": "^0.7.5",
    "@lexical/history": "^0.7.5",
    "@lexical/link": "^0.7.5",
    "@lexical/list": "^0.7.5",
    "@lexical/mark": "^0.7.5",
    "@lexical/markdown": "^0.7.5",
    "@lexical/overflow": "^0.7.5",
    "@lexical/plain-text": "^0.7.5",
    "@lexical/rich-text": "^0.7.5",
    "@lexical/selection": "^0.7.5",
    "@lexical/table": "^0.7.5",
    "@lexical/text": "^0.7.5",
    "@lexical/utils": "^0.7.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.34.0",
    "@types/node": "^18.11.18",
    "@vitejs/plugin-vue": "^4.0.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.30.0",
    "lexical": "0.7.5",
    "typescript": "^4.9.4",
    "unbuild": "^1.0.2",
    "vitepress": "1.0.0-alpha.33",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.18"
  }
}
